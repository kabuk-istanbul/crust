$meta = get_post_meta($post->ID, '{{id}}', {{isSingle}});
$posts = get_posts(array(
    'posts_per_page' => -1,
    'orderby' => 'title',
    'order' => 'ASC',
    'post_type' => '{{relation.to.slug}}',
    'suppress_filters' => true
));
{{#isSingle}}

$html = '<select name="{{postType.slug}}[{{slug}}]" style="width: 100%;">';
foreach ($posts as $post) {
    if ($post->ID == $meta) {
        $html .= '<option value="' . $post->ID . '" selected="selected">' . $post->post_title . '</option>';
    }
    else {
        $html .= '<option value="' . $post->ID . '">' . $post->post_title . '</option>';
    }
}
$html .= '</select>';
echo $html;
